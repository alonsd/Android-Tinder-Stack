<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_cv"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_margin="24dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.etiennelawlor.tinderstack.ui.DynamicHeightImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="88dp"
                android:background="@color/grey_300"
                android:scaleType="centerCrop"
                app:heightRatio="1.0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_gravity="bottom"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/display_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/primary_text"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/username_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="true">

            <TextView
                android:id="@+id/tinder_card_pass_textview"
                android:layout_width="120dp"
                android:layout_height="56dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:alpha="0"
                android:background="@drawable/shape_bg_green_rounded_rect"
                android:gravity="center"
                android:text="@string/tinder_card_pass"
                android:textColor="@color/grey_600"
                android:textSize="32sp"
                android:textStyle="bold"
                tools:alpha="1" />

            <TextView
                android:id="@+id/tinder_card_delete_text_view"
                android:layout_width="120dp"
                android:layout_height="56dp"
                android:layout_gravity="end"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="32dp"
                android:alpha="0"
                android:background="@drawable/shape_bg_red_rounded_rect"
                android:gravity="center"
                android:text="@string/tinder_card_delete"
                android:textColor="@android:color/holo_red_light"
                android:textSize="32sp"
                android:textStyle="bold"
                tools:alpha="1" />

        </FrameLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>
